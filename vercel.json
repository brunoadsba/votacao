{
  "version": 2,
  "name": "sistema-avaliacao-votacao",
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/deploy.html"
    },
    {
      "src": "/deploy",
      "dest": "/deploy.html"
    },
    {
      "src": "/admin",
      "dest": "/deploy.html?admin=true"
    },
    {
      "src": "/realtime",
      "dest": "/realtime.html"
    },
    {
      "src": "/qrcodes",
      "dest": "/qrcodes_participantes.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
